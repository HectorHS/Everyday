<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_configuration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.hhs.everyday.ConfigurationActivity"
        android:weightSum="8">

        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/theConfigurationListView"
		        android:layout_weight="1">

		</ListView>
<LinearLayout android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:layout_weight="7"
			  android:orientation="horizontal"
android:weightSum="6">

	<EditText android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:id="@+id/addTrackerNameInput"
			  android:layout_marginTop="16dp"
			  android:layout_marginLeft="4dp"
			  android:layout_marginRight="4dp"
			  android:layout_marginBottom="4dp"
			  android:hint="Day tracker name"
    android:layout_weight="2"/>

        <Button android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="Add"
        	        android:layout_marginTop="20dp"
        	        android:onClick="onTrackerTypeButtonClick"
        			android:layout_weight="2"
        			android:id="@+id/addTrackerTypeButton"
                android:layout_centerInParent="true"
        />

	<ImageButton android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:id="@+id/addIconButton"
				 android:layout_weight="1"
				 android:src="@drawable/add_icon"
				 android:clickable="true"
				 android:onClick="addIconClicked"
                 android:adjustViewBounds="true"
                 android:scaleType="fitXY"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="20dp"
	/>

</LinearLayout>

</LinearLayout>
