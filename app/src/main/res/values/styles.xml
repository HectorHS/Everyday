<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Android API 14 and higher -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EverydayItem">
        <item name="android:textColor">#d9e6f2</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">4</item>
        <item name="android:background">#005580</item>
    </style>

    <style name="EverydayText">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="InputInt">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputText">
        <item name="android:background">#e6e6e6</item>
        <item name="android:layout_marginLeft">20dp</item>
        <!--<item name="android:layout_width">fill_parent</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

</resources>
